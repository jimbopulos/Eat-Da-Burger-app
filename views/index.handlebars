<img src="http://clipart-library.com/img1/1241302.png"
    alt="burger!">

<h1>Eat Da Burger!</h1>

<div class="container">
    <div class="row" id="burger-lists">
        <div class="col-md-6">
            <h2>To be devoured:</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Devoured:</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 id="submit-text">Add a burger</h2>
            <div id="submit-form">
                <form id="create-form">

                    <div class="form-group">
                        <label for="burg">Burger Name:</label>
                        <input type="text" id="burg" name="name">
                    </div>

                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
    </container>