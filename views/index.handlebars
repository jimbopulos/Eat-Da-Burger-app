<container>
    <h1>Eat Da Burger</h1>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers that have been devoured:</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Burgers that have not been devoured:</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Add a burger</h2>
            <form id="create-form">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>

</container>